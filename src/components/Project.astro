---
const { title, desc, img, tech } = Astro.props;
---

<div class="single-item">
  <h3>{title}</h3>
  <div class="project-desc project-desc-list w-richtext">
    <ul role="list">
      {desc.map(item => <li>{item}</li>)}
    </ul>
  </div>
  <div style="text-align:center; margin: 30px 0;">
              <img 
                src={"/assets/" + img} 
                alt="Foto de Evidencia"
                style="width: 300px; max-width: 100%; border-radius: 8px;"
              />
            </div>
  <div class="mini-label-white">Aplicacioens y Tecnologias</div>
  <div class="chips-container">
    {tech.map(techItem => <div class="single-chip">{techItem}</div>)}
  </div>
</div>
