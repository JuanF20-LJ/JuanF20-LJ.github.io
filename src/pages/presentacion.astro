---
import Header from "../components/Header.astro";
import Project from "../components/Project.astro";
import Sidebar from "../components/Sidebar.astro";

---

<!DOCTYPE html>
<html
>
  <Header title="Presentación | JFLJ" />
  <body>
    <div class="content">
        <Sidebar selectedItem="presentacion" />
      <nav class="main">
        <div class="container">
          <div class="back-nav-container">
            <a href="/" class="back-nav-button w-inline-block"
              ><img src="/assets/back.svg" loading="lazy" alt="" class="back-nav-img" />
              <div>Volver</div></a
            >
          </div>
          <div class="content-container">
            <h1>Presentación</h1>
            <section class="items-container">
                <div class="resouce-items">
                    <div class="single-item">
                      <h3>Una breve introducción</h3>
                      <div class="project-desc project-desc-list w-richtext">
                        <ul>
                        <li>En el siguiente video podrás conocer un poco más sobre mí.</li>
                      </ul>
                      </div>
                    </div>
                  </div>
            </section>
            <div style="position:relative; padding-bottom:56.25%; height:0;">
            <iframe
              src="https://www.youtube.com/embed/fUujnp2Q3_4"
              style="position:absolute; top:0; left:0; width:100%; height:100%;"
              frameborder="0"
              allowfullscreen>
            </iframe>
            </div>
          </div>
        </div>
      </nav>
    </div>

    <!--[if lte IE 9]><script src="//cdnjs.cloudflare.com/ajax/libs/placeholders/3.0.2/placeholders.min.js"></script><![endif]-->
  </body>
</html>
